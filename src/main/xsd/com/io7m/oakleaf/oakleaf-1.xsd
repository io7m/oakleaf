<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="urn:com.io7m.oakleaf:1:0"
        elementFormDefault="qualified"
        xmlns:dc="http://purl.org/dc/elements/1.1/"
        xmlns:o="urn:com.io7m.oakleaf:1:0">

  <import namespace="http://purl.org/dc/elements/1.1/"
          schemaLocation="dc.xsd"/>

  <simpleType name="uuidType">
    <annotation>
      <documentation xml:lang="en">
        A UUID value.
      </documentation>
    </annotation>
    <restriction base="string">
      <pattern value="[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}"/>
    </restriction>
  </simpleType>

  <element name="Metadata">
    <complexType>
      <group ref="dc:elementsGroup"/>
    </complexType>
  </element>

  <element name="Overview">
    <complexType mixed="true"/>
  </element>

  <element name="Section">
    <complexType>
      <choice>
        <sequence minOccurs="1"
                  maxOccurs="unbounded">
          <choice>
            <element ref="o:Paragraph"/>
            <element ref="o:FormalItem"/>
          </choice>
        </sequence>
        <sequence minOccurs="1"
                  maxOccurs="unbounded">
          <element ref="o:Subsection"/>
        </sequence>
      </choice>

      <attribute name="title"
                 type="string"
                 use="required"/>
      <attribute name="id"
                 type="o:uuidType"
                 use="required"/>
    </complexType>
  </element>

  <element name="Subsection">
    <complexType>
      <choice>
        <sequence minOccurs="1"
                  maxOccurs="unbounded">
          <choice>
            <element ref="o:Paragraph"/>
            <element ref="o:FormalItem"/>
          </choice>
        </sequence>
        <sequence minOccurs="1"
                  maxOccurs="unbounded">
          <element ref="o:Subsection"/>
        </sequence>
      </choice>
      <attribute name="title"
                 type="string"
                 use="required"/>
      <attribute name="id"
                 type="o:uuidType"
                 use="required"/>
    </complexType>
  </element>

  <element name="Paragraph">
    <complexType mixed="true">
      <sequence minOccurs="0"
                maxOccurs="unbounded">
        <choice>
          <element ref="o:FootnoteReference"/>
          <element ref="o:Link"/>
          <element ref="o:LinkExternal"/>
          <element ref="o:Term"/>
        </choice>
      </sequence>

      <attribute name="id"
                 type="o:uuidType"
                 use="optional"/>
    </complexType>
  </element>

  <element name="FormalItem">
    <complexType mixed="true">
      <sequence minOccurs="1"
                maxOccurs="unbounded">
        <choice>
          <element ref="o:Verbatim"/>
          <element ref="o:Image"/>
        </choice>
      </sequence>

      <attribute name="title"
                 type="string"
                 use="required"/>
      <attribute name="id"
                 type="o:uuidType"
                 use="optional"/>
    </complexType>
  </element>

  <element name="Link">
    <complexType mixed="true">
      <attribute name="target"
                 type="o:uuidType"
                 use="required"/>
    </complexType>
  </element>

  <element name="LinkExternal">
    <complexType mixed="true">
      <attribute name="target"
                 type="anyURI"
                 use="required"/>
    </complexType>
  </element>

  <element name="Term">
    <complexType mixed="true">
      <attribute name="type"
                 type="string"
                 use="required"/>
    </complexType>
  </element>

  <element name="Image">
    <complexType>
      <attribute name="source"
                 type="anyURI"
                 use="required"/>
      <attribute name="title"
                 type="string"
                 use="required"/>
    </complexType>
  </element>

  <element name="Verbatim">
    <complexType mixed="true"/>
  </element>

  <element name="FootnoteReference">
    <complexType>
      <attribute name="ref"
                 type="o:uuidType"
                 use="required"/>
    </complexType>
  </element>

  <element name="Footnote">
    <complexType mixed="true">
      <attribute name="id"
                 type="o:uuidType"
                 use="optional"/>
    </complexType>
  </element>

  <element name="Footnotes">
    <complexType>
      <sequence minOccurs="0"
                maxOccurs="unbounded">
        <element ref="o:Footnote"/>
      </sequence>
    </complexType>
  </element>

  <element name="Article">
    <complexType>
      <sequence>
        <element ref="o:Metadata"/>
        <element ref="o:Overview"/>
        <choice>
          <sequence minOccurs="1"
                    maxOccurs="unbounded">
            <element ref="o:Section"/>
          </sequence>
          <sequence minOccurs="1"
                    maxOccurs="unbounded">
            <choice>
              <element ref="o:Paragraph"/>
              <element ref="o:FormalItem"/>
            </choice>
          </sequence>
        </choice>
        <sequence minOccurs="0"
                  maxOccurs="1">
          <element ref="o:Footnotes"/>
        </sequence>
      </sequence>
    </complexType>

    <unique name="LinkableElementUnique">
      <selector xpath=".//o:Section|.//o:Subsection|.//o:FormalItem|.//o:Paragraph|.//o:Footnote"/>
      <field xpath="@id"/>
    </unique>

    <keyref name="LinkRefersToLinkableElement"
            refer="o:LinkableElementUnique">
      <selector xpath=".//o:Link"/>
      <field xpath="@target"/>
    </keyref>
  </element>

</schema>